<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Изменяем кириллицу на латиницу по клику</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }
    </style>
</head>
<body>

    <h2>Изменяем кириллицу на латиницу</h2>

    <button id="changeData">Изменить данные на латиницу</button>

    <script>
        document.getElementById('changeData').onclick = function() {
            const surnameElement = document.querySelector('strong:contains("Фамилия")');
            const nameElement = document.querySelector('strong:contains("Имя")');
            const birthDateElement = document.querySelector('strong:contains("Дата рождения")');

            const surname = surnameElement.nextSibling.nodeValue.trim();
            const name = nameElement.nextSibling.nodeValue.trim();
            const birthDate = birthDateElement.nextSibling.nodeValue.trim();

            // Преобразование на латиницу
            const latinSurname = surname.replace(/А/g, 'A').replace(/Л/g, 'L').replace(/Ь/g, '').replace(/П/g, 'P').replace(/Е/g, 'E').replace(/Р/g, 'R').replace(/О/g, 'O').replace(/В/g, 'V').replace(/И/g, 'I').replace(/Ч/g, 'Ch');
            const latinName = name.replace(/Г/g, 'G').replace(/А/g, 'A').replace(/Л/g, 'L').replace(/И/g, 'I').replace(/Н/g, 'N').replace(/А/g, 'A');
            
            // Обновление данных
            surnameElement.nextSibling.nodeValue = latinSurname;
            nameElement.nextSibling.nodeValue = latinName;

            // Изменение года рождения
            const year = birthDate.split('.').pop();
            birthDateElement.nextSibling.nodeValue = year;
        };
    </script>
